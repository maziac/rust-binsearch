	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'binsearch'",
			"cargo": {
				"args": [
					"build",
					"--bin=binsearch",
					"--package=binsearch"
				],
				"filter": {
					"name": "binsearch",
					"kind": "bin"
				}
			},
			"args": [
				"abc.bin",
				"abc.bin",
				"--offs", "0",
				"--size", "12"
			],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'binsearch'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=binsearch",
					"--package=binsearch"
				],
				"filter": {
					"name": "binsearch",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}